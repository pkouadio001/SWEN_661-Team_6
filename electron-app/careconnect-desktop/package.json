{
  "name": "careconnect-desktop",
  "version": "1.0.0",
  "private": true,
  "main": "dist-electron/electron/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env ELECTRON_RENDERER_URL=http://localhost:5173 electron .\"",
    "electron:dev": "tsc -p tsconfig.json --watch --preserveWatchOutput",
    "electron:start": "electron .",
    "build": "vite build && tsc -p tsconfig.json",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^9.0.1",
    "cross-env": "^10.1.0",
    "electron": "^32.1.2",
    "typescript": "^5.7.2",
    "vite": "^5.4.10",
    "wait-on": "^7.2.0"
  }
}
